<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/iv_input_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#000000" />

    <Button
        app:layout_constraintTop_toBottomOf="@id/iv_input_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="25dp"
        android:id="@+id/btImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#4C4E4E"
        android:stateListAnimator="@null"
        android:text="@string/bt_image"
        android:textColor="#E2E6E6"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        app:layout_constraintTop_toBottomOf="@id/btImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="25dp"
        android:id="@+id/btCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#4C4E4E"
        android:stateListAnimator="@null"
        android:text="@string/bt_crop"
        android:textColor="#E2E6E6"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="25dp"
        app:layout_constraintTop_toBottomOf="@id/btCrop"
        android:id="@+id/tvErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="start"
        android:textSize="16sp"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>