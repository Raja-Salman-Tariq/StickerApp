    <LinearLayout
        android:id="@+id/ll_original_image_ue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F86B62"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_input_image_ue"
            android:layout_width="250dp"
            android:layout_height="175dp"
            android:background="#000000" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp">

            <Button
                android:id="@+id/btImage_ue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="#4C4E4E"
                android:stateListAnimator="@null"
                android:text="@string/bt_image"
                android:textColor="#E2E6E6"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btCrop_ue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#4C4E4E"
                android:stateListAnimator="@null"
                android:text="@string/bt_crop"
                android:textColor="#E2E6E6"
                android:textSize="16sp"
                android:textStyle="bold" />

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvErrorMessage_ue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="start"
        android:textSize="16sp"
        android:visibility="gone" />

